<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".features.session.SessionActivity">

    <!-- کارت اول -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:background="#F5F5F5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- آیکون وضعیت -->
            <ImageView
                android:id="@+id/sessionIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_check"
                android:contentDescription="Session Status" />

            <!-- اطلاعات دوره -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_weight="1">

                <!-- نام دوره -->
                <TextView
                    android:id="@+id/sessionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اسم دوره"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginBottom="4dp" />

                <!-- زمان دوره -->
                <TextView
                    android:id="@+id/sessionTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="زمان دوره"
                    android:textColor="#777777"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- آیکون پلی -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_play"
                android:contentDescription="Play Icon" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
